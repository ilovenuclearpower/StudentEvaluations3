@model IEnumerable<Student_Evaluation_3.Models.Course>

@{
    ViewData["Title"] = "Main";
}

<h2>Main</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <a asp-action="EvalList" asp-route-id="@item.CourseID">Show Evaluations</a> |
            </td>
        </tr>
}
    </tbody>
</table>
